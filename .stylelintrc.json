{
  "extends": "stylelint-config-prettier",
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "order/properties-order": [
      [
        {
          "emptyLineBefore": "always",
          "properties": [
            "display",
            "flex-flow",
            "height",
            "min-height",
            "width",
            "min-width",
            "padding",
            "padding-top",
            "padding-left",
            "padding-bottom",
            "padding-right",
            "margin",
            "margin-top",
            "margin-left",
            "margin-bottom",
            "margin-right"
          ]
        },
        {
          "emptyLineBefore": "always",
          "properties": [
            "position",
            "top",
            "left",
            "bottom",
            "right"
          ]
        },
        {
          "properties": [
            "background",
            "background-color",
            "justify-content",
            "align-items",
            "vertical-align",
            "self-justify",
            "self-align"
          ]
        },
        {
          "properties": [
            "font-face",
            "font",
            "font-family",
            "font-size",
            "font-weight",
            "color",
            "border"
          ]
        }
      ],
      { "unspecified": "bottom" }
    ]
  }
}
